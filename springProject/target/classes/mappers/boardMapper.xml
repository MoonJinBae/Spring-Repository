<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.myweb.www.repository.BoardDAO">

	<insert id="register">
		insert into board(title, writer, content) values(#{title}, #{writer}, #{content})
	</insert>
	
	<select id="getList" resultType="bvo">
		select * from board b 
		left join (select bno, count(bno) cmtQty from comment group by bno) c using(bno)
		left join (select bno, count(bno) fileCount from file group by bno) f using(bno)
		<include refid="search" />
		order by bno desc limit #{pageStart}, #{qty}
	</select>
	
	<select id="getDetail" resultType="bvo">
		select * from board where bno = #{bno}
	</select>
	
	<update id="readCount">
		update board set read_count = read_count + 1 where bno = #{bno}
	</update>
	
	<update id="update">
		update board set title = #{title}, content = #{content} where bno = #{bno}
	</update>
	
	<delete id="remove">
		delete from board where bno = #{bno}
	</delete>
	
	<select id="getTotalCount" resultType="int">
		select count(bno) from board
		<include refid="search" />
	</select>
	
	<select id="selectOneBno" resultType="long">
		select max(bno) from board;
	</select>
	
	<sql id="search">
		<if test="type != null">
			<trim prefix="WHERE" prefixOverrides="OR">
				<foreach collection="typeToArray" item="type">
					<trim prefix="OR">
						<choose>
							<when test="type == 't'.toString()">
								title like concat('%', #{keyword}, '%')
							</when>
							<when test="type == 'w'.toString()">
								writer like concat('%', #{keyword}, '%')
							</when>
							<when test="type == 'c'.toString()">
								content like concat('%', #{keyword}, '%')
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>
	
</mapper>










